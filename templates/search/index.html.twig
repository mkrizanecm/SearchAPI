{% extends 'base.html.twig' %}

{% block title %}Search GitIssues{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if final_result %}
    {{final_result}}
    <a href="{{ path('search') }}" class="btn btn-primary" role="button">Search for more terms!</a>
{% else %}
    <div class="d-flex align-items-center justify-content-center">
        <h1>Search GitIssues</h1>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        {{ form_start(form, {
        'attr':{'class': 'navbar-form navbar-center'}
        }) }}

        {{ form_widget(form.term, {
        'attr':{'class': 'form-term search-query'}
        })}}

        {{ form_end(form) }}
    </div>
{% endif %}
</div>
{% endblock %}
